<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Fullscreen application theme. -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Text style of TextView in which LW=wrap and LH=wrap. -->
    <style name="WrappedText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text style for the text JHARKHAND. -->
    <style name="WTJharkhand" parent="WrappedText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/_64sp</item>
    </style>

    <!-- Text style for the text TOUR GUIDE. -->
    <style name="WTTourGuide" parent="WrappedText">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">cursive</item>
        <item name="android:textSize">@dimen/_48sp</item>
    </style>
</resources>
